<amp-analytics type="googleanalytics" id="analytics-ga">
 <script type="application/json"
 {
   "vars": {
     "account": "{{ site.analytics.google_tracking_id }}"
   },
   "triggers": {
     "trackPageview": {
       "on": "visible",
       "request": "pageview"
     }
   }
 }
 </script>
</amp-analytics>
